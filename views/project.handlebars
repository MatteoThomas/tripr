         
<div class="grid-container">

      <div class="banner">
            <input type="file" id="filetag" hidden />
            <label for="filetag" id='bannerBtn'><a>select a banner photo</a></label>
            <br> <img id="preview" accept='image/jpeg,image/gif,image/png' hidden>


      </div>
           <div class="map">
            <div class="map-example">
                <div class="row">
                    <div class="col-lg-6">
                        <input
                            id="pac-input"
                               class="controls"
                              type="text"
                           placeholder="Search Box"/>
                        <div id="map"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="main">
            <h3>{{name}}</h3>
             <div id='date-info'>
            <p>Created by {{user.name}} on {{format_date date_created}}</p>
          </div>
            <div class="info">
               <p>{{description}}</p>
                
            </div>
   
        </div>
  <div class="pics">
            <form id='post-form' class='post-form' method='post'>
                <label for='files'><a>add photos</a></label>
                <input id='files' type='file' accept='image/jpeg,image/gif,image/png' multiple hidden />

                <div class="photos">
                    <output id='result' />
                </div>
            </form>
        </div>

    

 </div>

