<div class="row">
  <div class="col-auto">
    <h2>welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">location and date</label>
        <input class="form-input" type="text" id="project-name" name="project-name" placeholder="Denver, Colorado June 2021"/>
      </div>
       <div class="form-group">
        <label for="project-funding">Location name:</label>
        <input class="form-input" type="text" id="project-funding" name="project-funding" />
      </div>
      <div class="form-group">
        <label for="project-desc">memories</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary project-list" id='form'>create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Previous adventures:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}"><i class="fas fa-trash"></i></button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>